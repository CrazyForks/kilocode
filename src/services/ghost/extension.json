{
	"contributes": {
		"commands": [
			{
				"command": "kilo-code.ghostWriter.generateSuggestions",
				"title": "Kilo Code: Generate Suggested Edits",
				"category": "%configuration.title%"
			},
			{
				"command": "kilo-code.ghostWriter.displaySuggestions",
				"title": "Display Suggested Edits",
				"category": "%configuration.title%"
			},
			{
				"command": "kilo-code.ghostWriter.cancelSuggestions",
				"title": "Cancel Suggested Edits",
				"category": "%configuration.title%"
			},
			{
				"command": "kilo-code.ghostWriter.applyCurrentSuggestions",
				"title": "Apply Current Suggested Edit",
				"category": "%configuration.title%"
			},
			{
				"command": "kilo-code.ghostWriter.applyAllSuggestions",
				"title": "Apply All Suggested Edits",
				"category": "%configuration.title%"
			},
			{
				"command": "kilo-code.ghostWriter.promptCodeSuggestion",
				"title": "Quick Task",
				"category": "%configuration.title%"
			}
		],
		"keybindings": [
			{
				"command": "kilo-code.ghostWriter.keyTab",
				"key": "tab",
				"when": "editorTextFocus && !editorTabMovesFocus && !inSnippetMode"
			},
			{
				"command": "kilo-code.ghostWriter.keyEscape",
				"key": "escape",
				"when": "editorTextFocus && !editorTabMovesFocus && !inSnippetMode"
			},
			{
				"command": "kilo-code.ghostWriter.keyCmdI",
				"key": "ctrl+i",
				"mac": "cmd+i",
				"when": "editorTextFocus && !editorTabMovesFocus && !inSnippetMode"
			}
		],
		"codeActions": [
			{
				"languages": ["*"],
				"providedCodeActionKinds": ["vscode.CodeActionKind.QuickFix"]
			}
		],
		"chatParticipants": [
			{
				"id": "kilocode.ghost-writer",
				"fullName": "Kilo Code Agent",
				"name": "Agent",
				"description": "I can help you with quick tasks and suggested edits.",
				"isSticky": true
			}
		]
	}
}
