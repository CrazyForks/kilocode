{
	"name": "@kilo-code/vscode-mock",
	"version": "0.1.0",
	"description": "VS Code API mocking package for Kilo Code CLI and testing",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "npm run build:index && npm run build:vscode-api && npm run build:mocks",
		"build:index": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --format=cjs --alias:vscode=./src/vscode-api.ts",
		"build:vscode-api": "esbuild src/vscode-api.ts --bundle --platform=node --target=node18 --outfile=dist/vscode-api.js --format=cjs --alias:vscode=./src/vscode-api.ts",
		"build:mocks": "esbuild src/mocks/index.ts --bundle --platform=node --target=node18 --outfile=dist/mocks/ripgrep.js --format=cjs --alias:vscode=./src/vscode-api.ts",
		"dev": "concurrently \"npm run dev:index\" \"npm run dev:vscode-api\" \"npm run dev:mocks\"",
		"dev:index": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --format=cjs --watch --alias:vscode=./src/vscode-api.ts",
		"dev:vscode-api": "esbuild src/vscode-api.ts --bundle --platform=node --target=node18 --outfile=dist/vscode-api.js --format=cjs --watch --alias:vscode=./src/vscode-api.ts",
		"dev:mocks": "esbuild src/mocks/index.ts --bundle --platform=node --target=node18 --outfile=dist/mocks/ripgrep.js --format=cjs --watch --alias:vscode=./src/vscode-api.ts",
		"test": "vitest",
		"lint": "eslint src/**/*.ts",
		"clean": "rimraf dist"
	},
	"keywords": [
		"vscode",
		"mock",
		"testing",
		"cli"
	],
	"author": "Kilo Code Team",
	"license": "MIT",
	"dependencies": {
		"fs-extra": "^11.2.0",
		"glob": "^10.3.10",
		"chalk": "^5.3.0",
		"inquirer": "^9.2.0",
		"ora": "^8.0.0",
		"chokidar": "^3.6.0",
		"cosmiconfig": "^9.0.0",
		"winston": "^3.11.0",
		"cli-progress": "^3.12.0",
		"yaml": "^2.3.4",
		"which": "^4.0.0",
		"@roo-code/telemetry": "workspace:*"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/inquirer": "^9.0.7",
		"@types/node": "^20.0.0",
		"@types/which": "^3.0.3",
		"esbuild": "^0.25.0",
		"rimraf": "^6.0.1",
		"typescript": "^5.4.5",
		"vitest": "^2.0.0"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
